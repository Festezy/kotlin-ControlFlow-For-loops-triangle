fun main(){
    val x1 = arrayOf("x", "xx", "xxx", "xxxx")
    val x2 = arrayOf("   ★", "  ★★", " ★★★","★★★★")
    val x3 = arrayOf("   * ", "  ***", " *****","*******")

    for (x1 in x1) {

        println(x1)
    }
    println()

    for (x2 in x2) {

        println(x2)
    }
    println()

    for (x3 in x3) {

        println(x3)
    }
    println()
}
